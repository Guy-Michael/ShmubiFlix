<Page x:Class="CustomMediaControls.BrowsePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CustomMediaControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BrowsePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Source="Resources/shmubiflix.png" Grid.Row="0"/>
        <UniformGrid x:Name="Unigrid" Grid.Row="1" Rows="3" Columns="3"/>
        <Button Content="Set Root Folder" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Row="2" Width="auto" Click="SetRootFolder_Click"/>

    </Grid>


